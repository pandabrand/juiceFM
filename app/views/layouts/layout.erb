  <link rel="stylesheet" type="text/css" href="<%= asset_path 'bootstrap-theme.min.css'%>">
  <link rel="stylesheet" type="text/css" href="<%= asset_path 'bootstrap.min.css'%>">

  <link rel="stylesheet" type="text/css" href="<%= asset_path 'layout.css' %>">
